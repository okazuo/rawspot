<div class='spot-main'>
  <h1 class='new-spot-title'>
  物件の情報入力
  </h1>
  <%= form_with model: @spot, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class='spot-explain'>
      <div class='weight-bold-text'>
      取り扱い業者
      <span class='indispensable'>必須</span>
      </div>
      <%= f.text_area :estate_agent, class: 'item-text', placeholder: '不動産屋もしくは地主' ,maxlength: '40' %>
      <div class='weight-bold-text'>
      住所
      <span class='indispensable'>必須</span>
      </div>
      <%= f.text_area :address, class: 'item-text', placeholder: '都道府県から入力' ,maxlength: '40' %>
      <div class='weight-bold-text'>
      面積
      </div>
      <%= f.text_area :size, class: 'item-text', placeholder: '坪数' ,number: '4' %>
      <div class='weight-bold-text'>
      価格
      </div>
      <%= f.text_area :price, class: 'item-text', placeholder: '金額' ,number: '10' %>
      <div class='weight-bold-text'>
      水道管設備
      <span class='indispensable'>必須</span>
      </div>
      <%= f.text_area :warter_id, class: 'item-text' %>
      <div class='weight-bold-text'>
      公図
      <span class='indispensable'>必須</span>
      </div>
      <%= f.text_area :officialmap_id, class: 'item-text' %>
      <div class='weight-bold-text'>
      謄本
      <span class='indispensable'>必須</span>
      </div>
      <%= f.text_area :transcript_id, class: 'item-text'%>
      <div class='weight-bold-text'>
      物件に関する連絡先
      <span class='indispensable'>必須</span>
      </div>
      <%= f.text_area :explanation, class: 'item-text' %>
      
      <div class='weight-bold-text'>
      備考

      </div>
      <%= f.text_area :contact_id, class: 'item-text', placeholder: '補足や注意点等(1000字以内)' ,maxlength: '1000' %>
    </div>




  <% end %>
</div>