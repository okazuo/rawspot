<div class='form-wrap'>
  <div>
    <h1 class='form-header-text'>
    社員情報入力
    </h1>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.email_field :email, class:'input-default', placeholder:'PC・携帯どちらでも可' %>
      </div>
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class='indispensable'>必須</span>
        </div>
        <%= f.password_field :password, class:'input-default', placeholder:'６文字以上の半角英数字' %>
      </div>
      <div class="registrations-btn">
        <%= f.submit "ログイン",class:'sign-btn' %>
      </div>
    <% end %>
  </div>
</div>